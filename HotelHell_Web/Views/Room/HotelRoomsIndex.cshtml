@model IEnumerable<HotelHell_Models.Room.RoomListItem>

@{
    ViewBag.Title = "HotelRoomsIndex";
}

<h2>Rooms At @ViewBag.HotelName</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.RoomNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NumOfBeds)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.RoomNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumOfBeds)
            </td>
            @if (item.Available)
            {
                @*<td>Room Available</td>*@
                <td>
                    @Html.ActionLink("Reserve Room", "ReserveRoom", new { roomId = item.Id })
                </td>
            }
            else
            {
                <td>Not Available</td>
            }

            @*<td>
                    @Html.ActionLink("Edit", "Edit", new { roomId = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { roomId = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { roomId = item.Id })
                </td>*@
        </tr>
    }

</table>
